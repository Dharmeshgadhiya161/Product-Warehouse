<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cardV"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_5sdp">


        <TextView
            android:id="@+id/txt_invoice_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_invoice_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:textColor="@color/sub_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_invoice_name" />

        <TextView
            android:id="@+id/txt_invoice_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:textColor="@color/sub_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_invoice_address" />

        <TextView
            android:id="@+id/txt_invoice_total_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:textColor="@color/sub_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_invoice_address" />

        <TextView
            android:id="@+id/txt_invoice_totalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:textColor="@color/rad"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_invoice_total_qty" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>