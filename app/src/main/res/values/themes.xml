<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.DhWareHouse" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">#F5F5F5</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ThemeMainActivity.DhWareHouse" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


    <style name="My_textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:paddingHorizontal">@dimen/_14sdp</item>
        <item name="android:paddingVertical">@dimen/_5sdp</item>
    </style>


    <style name="table_header" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@android:color/transparent</item>


    </style>

    <style name="table_row_item" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/table_content_cell_bg</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
    </style>


    <style name="rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>


</resources>